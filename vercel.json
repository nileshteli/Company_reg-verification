{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
    
  "rewrites": [
    { "source": "/(.*)", 
    "destination": "/public/index.html" }
  ],
  
  "cleanUrls": true,
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" }
  ],
  "routes": [
    { "src": "/public/index.html", "dest": "/public/index.html" },
    { "handle": "filesystem" }
  ]

}
